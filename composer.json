{
    "name": "dmytrof/fractal-bundle",
    "type": "symfony-bundle",
    "description": "Symfony FractalBundle",
    "keywords": ["Fractal"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmytro Feshchenko",
            "email": "dmytro.feshchenko@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "league/fractal": "^0.18",
        "symfony/framework-bundle": "^3.4 || ^4.3 || ^5.0",
        "doctrine/collections": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3 || ^9.1",
        "friendsofsymfony/rest-bundle": "^2.2 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Dmytrof\\FractalBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dmytrof\\FractalBundle\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "league/fractal": "Allows more advanced using of Fractal",
        "friendsofsymfony/rest-bundle": "Adds support for using Fractal with FOSRestBundle"
    },
    "scripts": {
        "test": "phpunit"
    }
}